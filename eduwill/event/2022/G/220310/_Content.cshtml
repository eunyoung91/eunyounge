<script type="text/javascript">
    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
    var str = 'event.eduwill.net';
    var checkUrl = url.indexOf(str);

    $(function(){
        frontInit();
    });

    function frontInit(){
        pageMove('.page-move');
        baseEvent();
        testEvent();
        loadEvent();
    }

    function loadEvent(){
        $(window).on('load', function(){
            var _top = (isMobile) ? $('.sector-title').offset().top - 50 : $('.sector-title').offset().top + 200;

            $('html, body').animate({
                scrollTop: _top
            }, 500);

            setTimeout(function(){
                titleEvent();
            }, 550);
        });
    }

    function titleEvent(){
        var promotionTitle = $('.sector-title');

        TweenMax.fromTo( promotionTitle.find('.laurel'), .4, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: .1, ease: Sine.easeOut });

        TweenMax.fromTo( promotionTitle.find('.text-1'), .4, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: .2, ease: Power0.easeOut, onComplete: function(){
            TweenMax.fromTo( promotionTitle.find('.text-2'), .3, { opacity: 0, y: -10 }, { opacity: 1, y: 0, delay: .1, ease: Back.easeOut.config(2) });
            TweenMax.fromTo( promotionTitle.find('.text-3'), .3, { opacity: 0, y: -10 }, { opacity: 1, y: 0, delay: .2, ease: Back.easeOut.config(2) });
        }});

        TweenMax.fromTo( promotionTitle.find('.title-1'), .6, { opacity: 0, scale: 1.2 }, { opacity: 1, scale: 1, delay: .4, ease: Back.easeOut.config(1) });
        TweenMax.fromTo( promotionTitle.find('.title-2'), .6, { opacity: 0, scale: 1.2 }, { opacity: 1, scale: 1, delay: .6, ease: Back.easeOut.config(1) });

        TweenMax.fromTo( promotionTitle.find('.illust'), .6, { opacity: 0 }, { opacity: 1, delay: .8, ease: Sine.easeOut });

        TweenMax.fromTo( promotionTitle.find('.action-apply'), .5, { opacity: 0, y: 50, }, { opacity: 1, y: 0, delay: 1.0, ease: Sine.easeOut });
    }

