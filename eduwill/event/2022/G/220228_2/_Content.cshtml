<script type="text/javascript">
    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
    var str = 'event.eduwill.net';
    var checkUrl = url.indexOf(str);

    $(function(){
        frontInit();
    });

    function frontInit(){
        pageMove('.page-move');
        playVideo();
        titleEvent();

        if( isMobile ){
            slideEvent();
        } else {
            stepEvent('.sector-start .start-list div');
            stepEvent('.sector-curriculum .curriculum-list div');
        }
    }

    function titleEvent(){
        var promotionTitle = $('.sector-title');

        TweenMax.fromTo( promotionTitle.find('.teacher'), .6, { opacity: 0, x: 100 }, { opacity: 1, x: 0, delay: .6, ease: Sine.easeOut, onComplete: function(){

            TweenMax.fromTo( promotionTitle.find('.title-1'), .5, { opacity: 0, x: 50 }, { opacity: 1, x: 0, delay: .2, ease: Sine.easeOut });
            TweenMax.fromTo( promotionTitle.find('.title-2'), .5, { opacity: 0, scale: 1.2 }, { opacity: 1, scale: 1, delay: .4, ease: Back.easeOut.config(1) });
            TweenMax.fromTo( promotionTitle.find('.title-3'), .5, { opacity: 0, scale: 1.2 }, { opacity: 1, scale: 1, delay: .6, ease: Back.easeOut.config(2) });

            TweenMax.fromTo( promotionTitle.find('.action-home'), .5, { opacity: 0 }, { opacity: 1, delay: .8, ease: Sine.easeOut });

            if( !isMobile ){
                TweenMax.fromTo( promotionTitle.find('.profile-1'), .4, { opacity: 0, y: 50, }, { opacity: 1, y: 0, delay: 1.0, ease: Sine.easeOut });
                TweenMax.fromTo( promotionTitle.find('.profile-2'), .4, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.1, ease: Sine.easeOut });
                TweenMax.fromTo( promotionTitle.find('.profile-3'), .4, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.2, ease: Sine.easeOut });

                TweenMax.fromTo( promotionTitle.find('.action-apply'), .5, { opacity: 0, y: 50, }, { opacity: 1, y: 0, delay: 1.4, ease: Sine.easeOut });
            } else {
                TweenMax.fromTo( promotionTitle.find('.profile-list'), .4, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.4, ease: Sine.easeOut, onComplete: function(){
                    promotionTitle.find('.slide-list').slick('setPosition');
                }});

                TweenMax.fromTo( promotionTitle.find('.action-apply'), .5, { opacity: 0, y: 50, }, { opacity: 1, y: 0, delay: 1.0, ease: Sine.easeOut });
            }
            TweenMax.fromTo( promotionTitle.find('.stamp'), .6, { opacity: 0, scale: 1.1, }, { opacity: 1, scale: 1, delay: 2.0, ease: Back.easeOut.config(1) });

            TweenMax.fromTo( $('.fix-right'), .6, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.8, ease: Sine.easeOut });
        }});
    }

    function slideEvent(){
        $('.slide-list').each(function(key, item) {
            var sliderIdName = 'slider' + key;
                this.id = sliderIdName;
            var sliderId = '#' + sliderIdName;
            var _speed = 3000;
            var _data = $(sliderId).data('slide');

            if(_data == 'start' || _data == 'curriculum' ){
                _speed = 2000;
            }

            $(sliderId).slick({
            autoplay: true,
            autoplaySpeed: _speed,
            speed: 1000,
            infinite: true,
            arrows: false,
            dots: true,
            variableWidth: true,
            centerMode: true
            });
        });
    }

    function stepEvent(selector){
        $(selector).on('click', function(){
            $(selector).removeClass('active');
            $(this).addClass('active');
        });

        var listAuto = setInterval(function(){
            if( $(selector).last().hasClass('active') ){
                $(selector).first().click();
            } else {
                $(selector + '.active').next('div').click();
            }
        }, 2000);
    }

    function playVideo(){
        var obj = {
            a: '//pmp.eduwill.net/eduwillpmp/eduwill/flv/sample/conte/G/GED-PR-GSH.mp4', // video src
        };

        var playerSrc = [];
        for(var o in obj){
            playerSrc.push(obj[o]);
        };

        var videoOption = {
            playerSrc: playerSrc,
            preview: true,
            playerClass: 'eduwill-video-player',
            playerPlayClass: 'eduwill-video-play'
        };

        eduf.UI.Player(videoOption);
    }
</script>
