@{
	String platform = ("W".Equals(ViewBag.PlatformCd))? "pc": "mobile";
}
@*
@if ("W".Equals(ViewBag.PlatformCd)){}
*@

<div class="promotion">

	<div class="fix-bottom">
		<div class="wrap">
			<a href="#sectorApply" class="page-move icon-pointer">
				<div class="bottom-inner">
					<div class="action">
						<img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/fix_bottom.png" alt="">
					</div>
				</div>
			</a>
		</div>
	</div>

	<div class="sector-title">
		<div class="wrap-full">
			@* <img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/title.png" alt=""> *@
			<p class="laurel"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/laurel.png" alt=""></p>
			<p class="title-1"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_1.png" alt=""></p>
			<p class="title-2"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_2.png" alt=""></p>
			<p class="title-3"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_3.png" alt=""></p>
			<p class="title-4"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_4.png" alt=""></p>
			<p class="title-5"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_5.png" alt=""></p>
			<p class="title-6"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/pc/title_6.png" alt=""></p>
			<p class="title-book"><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/title_book.png" alt=""></p>
		</div>
	</div>

	<div class="sector-configure">
		<div class="wrap">
			<img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/configure.jpg" alt="">
		</div>
	</div>

	<div class="sector-preview">
		<div class="wrap">
			<img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/preview.jpg" alt="">
			@if ("M".Equals(ViewBag.PlatformCd)){
				<div class="preview-list">
					<div><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/mobile/slide_1.jpg" alt=""></div>
					<div><img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/mobile/slide_2.jpg" alt=""></div>
				</div>
			}
		</div>
	</div>

	<div id="sectorApply" class="sector-apply">
		<div class="wrap-full">
			<div class="apply-img">
				<img src="//img.eduwill.net/eduwill/img/2022/G/event/220221_2/@platform/apply.jpg" alt="">
			</div>

			<div class="action">
				<button type="button" class="btn"><span>9급 다운로드</span></button>
				<button type="button" class="btn"><span>군무원 다운로드</span></button>
				<button type="button" class="btn"><span>7급 다운로드</span></button>
				<button type="button" class="btn"><span>PSAT 다운로드</span></button>
			</div>

			<div class="notice-box">
				<div class="notice-title">꼭! 읽어보세요</div>
				<ul class="notice-list">
					<li>PSAT은 꼭 맞춰야 할 문제가 제공됩니다.</li>
					<li>가장 많이 틀리는 600제는 신청즉시 제공되며, 나의강의실에서 <br class="only-mobile">1주일 간 다운로드 가능합니다.</li>
					<li>가장 많이 틀리는 600제는 무단전재 및 재배포 불가합니다.</li>
				</ul>
			</div>
		</div>
	</div>

	<div id="sectorRumor">
		@* 소문내기 이벤트는 여기에 적용 부탁드립니다. *@
	</div>
</div>

<script type="text/javascript">
	var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
	var url = window.location.href;
	var str = 'event.eduwill.net';
	var checkUrl = url.indexOf(str);

	$(function(){
		frontInit();
	});

	function frontInit(){
		pageMove('.page-move');
		loadEvent();
		slideEvent();
	}

	function loadEvent(){
		$(window).on('load', function(){
			var _top = (isMobile) ? $('.sector-title').offset().top - 50 : $('.sector-title').offset().top;

			$('html, body').animate({
				scrollTop: _top
			}, 500);

			setTimeout(function(){
				titleEvent();
			}, 550);
		});
	}

	function titleEvent(){
		var promotionTitle = $('.sector-title');
		TweenMax.fromTo( promotionTitle.find('.laurel'), .5, { opacity: 0, y: -50 }, { opacity: 1, y: 0, delay: 0, ease: Power4.easeOut });
		TweenMax.fromTo( promotionTitle.find('.title-1'), .7, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: .2, ease: Power2.easeOut });
		TweenMax.fromTo( promotionTitle.find('.title-2'), .7, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: .4, ease: Power2.easeOut });
		TweenMax.fromTo( promotionTitle.find('.title-3'), .7, { opacity: 0, scale: 0, y: -50 }, { opacity: 1, scale: 1, y: 0, delay: .6, transformOrigin: 'center bottom', ease: Back.easeOut.config(1) });
		TweenMax.fromTo( promotionTitle.find('.title-4'), .7, { opacity: 0, scale: 0, y: -50 }, { opacity: 1, scale: 1, y: 0, delay: .8, transformOrigin: 'center bottom', ease: Back.easeOut.config(1) });
		TweenMax.fromTo( promotionTitle.find('.title-5'), 1, { opacity: 0, x: -200 }, { opacity: 1, x: 0, delay: 1, ease: Power2.easeOut });
		TweenMax.fromTo( promotionTitle.find('.title-6'), 1, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: 1.2, ease: Power2.easeOut });
		TweenMax.fromTo( promotionTitle.find('.title-book'), 1, { opacity: 0, y: 100 }, { opacity: 1, y: 0, delay: 1.4, ease: Power2.easeOut });
		
		TweenMax.fromTo( $('.fix-bottom'), 1, { opacity: 0, y: 100 }, { opacity: 1, y: 0, delay: 1.6, ease: Sine.easeOut });
	}

	function slideEvent(){
		$('.preview-list').slick({
			autoplay: true,
			autoplaySpeed: 3000,
			speed: 1000,
			infinite: true,
			arrows: false,
			dots: true
		});
	}

</script>
