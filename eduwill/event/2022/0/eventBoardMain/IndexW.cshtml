
@{
    string viewPath = ((RazorView)ViewContext.View).ViewPath;
    viewPath = viewPath.Remove(viewPath.LastIndexOf('/') + 1);

}

@{
    string cssUrl = ViewBag.IsLocal
        ? "/Content/2020/0/eventboard/css/web.css"    // local 경로
        : "//img.eduwill.net/resources/eduwill/" + ViewBag.ServerMode + "/css/eventboard/web.css";   // ftp 경로
}

<link rel="stylesheet" type="text/css" href="@cssUrl" />
<style>
	.event-board .wrap .event-list li {height:350px;}
	.event-board .wrap .event-list li a .info-box .subject{min-height:auto;}
	.event-board .wrap .event-list li a .info-box .date span{
		height:100px;overflow:hidden;
		display:-webkit-box; 
		word-wrap:break-word; 
		-webkit-line-clamp:5; 
		-webkit-box-orient:vertical; 
		text-overflow:ellipsis;
		line-height:20px;
	}

</style>
@Html.Partial(viewPath + "_Content.cshtml")