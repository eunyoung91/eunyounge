<script type="text/javascript">
	var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
	var agent = navigator.userAgent.toLowerCase();
	var trident = navigator.userAgent.match(/Trident\/(\d.\d)/i);
	var url = window.location.href;
	var str = 'event.eduwill.net';
	var checkUrl = url.indexOf(str);

	$(function(){
		init();
	});

	function init(){
		titleEvent();
		addEvent();
		winnerList();
	};

	function addEvent(){
		pageMove('.page-move');
		/*if ("@(ViewBag.platformCd)" == "M") {
		}*/

		var fileTarget = $('.file-box .upload-hidden');
		fileTarget.on('change', function(){
			if(window.FileReader){
				var filename = $(this)[0].files[0].name;
			} else {
				var filename = $(this).val().split('/').pop().split('\\').pop();
			}
			$(this).siblings('.upload-name').val(filename);
		});
	}
	
	function titleEvent(){
		var $title = $('.sector-title');
		_titleMotion();

		setTimeout(function() { $(".title-1").css('opacity', '1').addClass('animate__fadeInLeft animate__animated animate__faster') }, 100);
		setTimeout(function() { $(".title-2").css('opacity', '1').addClass('animate__fadeInLeft animate__animated animate__faster') }, 200);
		setTimeout(function() { $(".title-3").css('opacity', '1').addClass('animate__fadeInLeft animate__animated animate__faster') }, 300);
		setTimeout(function() { $(".title-4").css('opacity', '1').addClass('animate__fadeInLeft animate__animated animate__faster') }, 400);

		function _titleMotion(){
			TweenMax.fromTo( $title.find('.bar-1'), .5, { opacity: 0, width: 0,}, { opacity: 1, width: 620, delay: .5, transformOrigin: 'left bottom', ease: Power4.easeOut});
			TweenMax.fromTo( $title.find('.obj-1'), 1, { opacity: 0, x: 100}, { opacity: 1, x: 0, delay: .6, ease: Sine.easeOut, onComplete:function(){
				TweenMax.fromTo( $title.find('.bar-1'), .5, { opacity: 1}, { opacity: 0, delay: .4, ease: Power4.easeOut});
				TweenMax.fromTo( $title.find('.obj-1'), 1, { opacity: 1, x: 0}, { opacity: 0, x: 50, delay: .3, ease: Power4.easeOut, onComplete:function(){
					TweenMax.fromTo( $title.find('.bar-2'), .5, { opacity: 0, width: 0,}, { opacity: 1, width: 620, delay: 0, transformOrigin: 'left bottom', ease: Power4.easeOut});
					TweenMax.fromTo( $title.find('.obj-2'), 1, { opacity: 0, x: -100}, { opacity: 1, x: 0, delay: .1, ease: Sine.easeOut, onComplete:function(){
						TweenMax.fromTo( $title.find('.bar-2'), .5, { opacity: 1}, { opacity: 0, delay: .4, ease: Power4.easeOut});
						TweenMax.fromTo( $title.find('.obj-2'), 1, { opacity: 1, x: 0}, { opacity: 0, x: -100, delay: .3, ease: Power4.easeOut, onComplete:function(){
							TweenMax.fromTo( $title.find('.bar-3'), .5, { opacity: 0, width: 0,}, { opacity: 1, width: 620, delay: 0, transformOrigin: 'left bottom', ease: Power4.easeOut});
								TweenMax.fromTo( $title.find('.obj-3'), 1, { opacity: 0, x: -100}, { opacity: 1, x: 0, delay: .1, ease: Sine.easeOut, onComplete:function(){
									TweenMax.fromTo( $title.find('.bar-3'), .5, { opacity: 1}, { opacity: 0, delay: .4, ease: Power4.easeOut});
									TweenMax.fromTo( $title.find('.obj-3'), 1, { opacity: 1, x: 0}, { opacity: 0, x: -100, delay: .3, ease: Power4.easeOut});
								}});
						}});
					}});
				}});
			}});
		}

		setInterval(function(){
			_titleMotion();
		}, 7000);
	}

	function winnerList() {
		var options = {
			jsonFileNm: 'B202105_WINNER.min', /* 검정 */
			jsonFileNm: 'K202201_WINNER.min', /*경비*/
			jsonFileNm: 'S202000_WINNER.min', /*사복*/
			jsonFileNm: 'D202111_WINNER.min', /*도로*/
			jsonFileNm: 'A202104_WINNER.min', /*행정사*/
		};

		var slidesRow = isMobile?3:5;
		var slidesShow = isMobile?6:8;
		var slickOptions = {
			speed: 1000,
			slidesToShow: slidesShow,
            slidesPerRow: slidesRow,
		};
		eduf.UI.Winner('.winner-list', options, slickOptions);
	}
</script>