@{
	string platform = (string)ViewBag.platformCd == "W" ? "pc" : "mobile";

    string imgUrl = ViewBag.IsLocal
        ? "//img.eduwill.net/eduwill/img/2022/Q/event/220112/" // local 경로
        : "//img.eduwill.net/eduwill/img/2022/Q/event/220112/"; // ftp 경로

	ViewBag.AwardsMonthly = "32개월";	// 최하단 트로피 영역 개월 수
}

<div id="contents" class="promotion">
	
	@if("W".Equals(ViewBag.PlatformCd)){
		<div class="fix_banner">
			<a href="https://event.eduwill.net/Event/Q/eventBoardMain" target="_blank"><img src="@imgUrl/@platform/fix_banner.png" alt=""></a>
		</div>
	}

	<div class="fix_banner_bottom">
		<button type="button" id="fileDown"><img src="@imgUrl/@platform/fix_banner_bottom.png" alt=""></a>
	</div>

	<div class="container promotion-title">
		<div class="wrap">
			<img src="@imgUrl/@platform/visual_title1.png" alt="">
		</div>
	</div>

	<div class="container promotion-cont1">
		
		<div class="slide-wrap">
			<div class="slide-cont">
				<div class="slide-item"><img alt="" src="//img.eduwill.net/eduwill/img/2021/Q/freebook/210913/@platform/cont9_slide_01.png" /></div>
				<div class="slide-item"><img alt="" src="//img.eduwill.net/eduwill/img/2021/Q/freebook/210913/@platform/cont9_slide_02.png" /></div>
				<div class="slide-item"><img alt="" src="//img.eduwill.net/eduwill/img/2021/Q/freebook/210913/@platform/cont9_slide_03.png" /></div>
			</div>
		</div>
	</div>

	<div class="container promotion-cont2">
		<div class="wrap">
			<img src="@imgUrl/@platform/cont2_title.png" alt="">
		</div>
	</div>

	<div class="container promotion-awards">
        <div class="wrap">
			<button type="button" data-popup="0" class="eduf-reason-button btn-reason">근거확인</button>
            <div class="item">

                <img src="@imgUrl/@platform/awards_2201.png" alt="">
                
                <div class="txt">
                    @(ViewBag.AwardsMonthly)
                </div>
            </div>

            <div class="winner-contents">
                <div class="winner-list"></div>
            </div>
        </div>
    </div>

	<div class="container promotion-eco" data-eduwill-eco-content="4131"></div>
	
</div>


