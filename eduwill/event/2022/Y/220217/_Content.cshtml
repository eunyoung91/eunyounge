				<div id="priceArrary" class="priceWrap"></div>
			}
		</div>
	</div>

	<div class="container promotion-somun">
		소문내기 영역
	</div>

	<div class="container promotion-cont4 eduf-paragraph-final" 
		data-bg="#ffc20e"
		data-img="@imgUrl/@platform/cont4_paragraph.png"
		data-height="255"
		>
		<div class="wrap">
			<button type="button" data-popup="0" class="eduf-reason-button btn-reason">근거확인</button>
			<img src="@imgUrl/@platform/cont4_title.png" alt="" >

			<div class="winner-contents">
				<div class="winner-list"></div>
			</div>
		</div>
	</div>

</div>


<div id="eduf-popup">
	<div class="popupWrap">
		<div class="popup-body">

			<div data-popupcont="0" data-eduwill-eco-content="4249"></div>

			<div data-popupcont="video">

                <div id="videoPop" class="video-popup">
                    <div class="video-cont"></div>
                </div>
                
            </div>

			<button id="eduf-popup-close" type="button" class="popup-close"><span class="sr-only">닫기</span></button>
		</div>
	</div>
</div>

<script type="text/javascript" src="//img.eduwill.net/eduwill/live/js/common/EventPersonalKTK.js"></script>
<script src="//img.eduwill.net/eduwill/live/js/common/script.js"></script>
<script type="text/javascript">

var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
	var url = window.location.href;

	
	document.addEventListener("DOMContentLoaded", function(){
		pageMove('.page-move');
		_f_initVideoCommon()
		winnerList();
		_f_initPrice();
		_f_initPointButton();
		_f_initTimeEvent();

		$('.slide-cont').slick({
			autoplay: true,
			slidesToShow : 1,
			slidesToScroll : 1,
			speed: 500,
			infinite: true,
			arrows: false,
			dots: false,
			variableWidth: true,
			centerMode: true,
			responsive: [{
				breakpoint: 720,
				settings: {
					variableWidth: false,
				}
			}]
		});

		var _videoSlide = $('.Slide');
		_videoSlide.slick({
			centerMode: true,
			centerPadding: '0',
			infinite: true,
			slidesToScroll: 1,
			autoplay: true,
			autoplaySpeed: 5000,
			variableWidth: true,
			dots: true,
			arrows: true,
			responsive: [{
				breakpoint: 720,
				settings: {
					arrows: false,
				}
			}]
		});

		document.querySelector('.Slide').addEventListener('click', function(e){
			e.preventDefault();
			_videoSlide.slick('slickPause');

		});

		document.getElementById('eduf-popup-close').addEventListener('click', function(e){
			e.preventDefault();
			_videoSlide.slick('slickPlay');
		});
	})



	function _f_initTimeEvent(){
		//timer
        getTimerNew('#promotionTimer', 'Feb 21,2022,23:59');

		if ("@(ViewBag.platformCd)" == "M") {
			pageMove('.page-move', -100);
		} else {
			pageMove('.page-move', -88);
		}

    }
	

	$(window).scroll(function(){
		var winTop = $(window).scrollTop();

		$('.sector-timer').each(function(){
			var timeTop = $(this).offset().top;
			
			if(winTop > timeTop){
				$(this).addClass('fixed');
				$('.float-banner').addClass('fixed');
			}else{
				$(this).removeClass('fixed');
				$('.float-banner').removeClass('fixed');
			}
		});
	});
	
	function _f_initPrice(){

		var _priceWrap = document.getElementById('priceArrary');
		var _pricewArrary = [
			{name: '전기+소방 평생패스', subname: '8종 합격까지 평생수강', discount: 40, price1: '970,000', price2: '582,000', link: '@link1'},
			{name: '쌍기사 평생패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '750,000', price2: '450,000', link: '@link2'},
			{name: '쌍기사 2년패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '610,000', price2: '366,000', link: '@link3'},
			{name: '쌍기사 1년패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '580,000', price2: '348,000', link: '@link4'},
			{name: '6개월 단기패스(종합)', subname: '수강기간 2개월 연장', discount: 40, price1: '520,000', price2: '312,000', link: '@link5'},
		];

		var _priceHTML = '';
		for( i=0; _pricewArrary.length > i; i++){
			_priceHTML += '<div class="price">';
			_priceHTML += '<h3>'+_pricewArrary[i].name+'</h3>';
			if( isMobile ){
				_priceHTML += '<h4>'+_pricewArrary[i].subname+'</h4>';
			}
			_priceHTML += '<p class="discount">';
			_priceHTML += '<span class="disc1">'+_pricewArrary[i].discount+'%</span>';
			_priceHTML += '<span class="disc2">'+_pricewArrary[i].price1+'<em>원</em></span>';
			_priceHTML += '<span class="disc3">'+_pricewArrary[i].price2+'<em>원</em></span>';
			_priceHTML += '</p>';
			_priceHTML += '<a href="'+_pricewArrary[i].link+'" target="_blank">자세히보기</a>';
			_priceHTML += '</div>';
		}
		
		_priceWrap.innerHTML = _priceHTML;
	}

	function winnerList(){
		var options = {
			jsonFileNm: "Y202012_WINNER.min",
		};

		var _row;
		var _show;

		if ("@(ViewBag.platformCd)" == "M") {
			_row = 3;
			_show = 6;
		} else {
			_row = 4;
			_show = 6;
		}
		var slickOptions = {
			speed: 1000,
			slidesPerRow: _row,
			slidesToShow: _show,
		};

		eduf.UI.Winner('.winner-list', options, slickOptions);
	}
</script>