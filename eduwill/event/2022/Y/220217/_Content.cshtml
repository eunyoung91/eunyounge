<link href="https://img.eduwill.net/eduwill/live/css/common/eduf-slide.css" rel="stylesheet" />
<div id="contents" class="promotion">

	<div class="float-banner">
		<div class="link-wrap">
			<a href="#event1" class="btn-refunds page-move" data-icon="hand" data-style="16,3,52,slideY" data-stylemo="-3,-7,30,slideY" data-pointer="icon_pointer_12">
				<img src="@imgUrl/@platform/float_title1.png" alt="" >
			</a>
			<a href="#event2" class="btn-refunds page-move" data-icon="hand" data-style="16,3,52,slideY" data-stylemo="-3,-7,30,slideY" data-pointer="icon_pointer_12">
				@if ("W".Equals(ViewBag.PlatformCd)){
					<img src="@imgUrl/@platform/float_title2.gif" alt="" >
				}else{
					<img src="@imgUrl/@platform/float_title2.png" alt="" >
				}
			</a>
			@if ("W".Equals(ViewBag.PlatformCd)){
				<a href="#SomunDiv" class="btn-refunds page-move" data-icon="hand" data-style="16,3,52,slideY" data-stylemo="-3,-7,30,slideY" data-pointer="icon_pointer_12">
					<img src="@imgUrl/@platform/float_title3.png" alt="" >
				</a>
			}
		</div>
	</div>
	

	<div class="sector-timer">
        <div class="timer-inner">
            <div class="wrap">
                @if ("W".Equals(ViewBag.PlatformCd)){
					<div class="item timer-title">타임특가 마감임박!</div>
				}else{
					<div class="item timer-title">마감특가 마감임박</div>
				}
				
                <div id="promotionTimer" class="item grid timer-wrap">
                    <div class="col">
                        <!-- 일 -->
                        <em class="unit">D&nbsp;-&nbsp;</em>
                        <em class="day">00</em><em class="days">일</em>
                    </div>
                    <div class="col">
                        <!-- 시 -->
                        <em class="hour">00</em><em>:</em>
                    </div>
                    <div class="col">
                        <!-- 분 -->
                        <em class="min">00</em><em>:</em>
                    </div>
                    <div class="col">
                        <!-- 초 -->
                        <em class="sec">00</em><em>:</em>
                    </div>
                    <div class="col">
                        <!-- 밀리 초 -->
                        <em class="msec">00</em>
                    </div>
                </div>
            </div>
        </div>
    </div>

	<div class="container promotion-visual">
		<div class="wrap">
			<img src="@imgUrl/@platform/visual_title.png" alt="" >
		</div>
	</div>

	<div class="container promotion-cont1">
		<div class="wrap">
			<img src="@imgUrl/@platform/cont1_title.png" alt="" >
		</div>
	</div>
	
	<div id="event1" class="container promotion-cont2 eduf-paragraph-final" 
		data-bg="#ffc20e"
		data-img="@imgUrl/@platform/cont2_paragraph.png"
		data-height="255"
		>
		<div class="wrap">
			<img src="@imgUrl/@platform/cont2_title.png" alt="" >
		</div>

		<div id="slideWrap">
			<div class="Slide">
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYT-YJS.mp4">
					<img src="@imgUrl/pc/cont2_video1.png" alt="">
				</div>
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYR-KYB.mp4">
					<img src="@imgUrl/pc/cont2_video2.png" alt="">
				</div>
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYE-SIS.mp4">
					<img src="@imgUrl/pc/cont2_video3.png" alt="">
				</div>
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYS-KDG.mp4">
					<img src="@imgUrl/pc/cont2_video4.png" alt="">
				</div>
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYD-YJS.mp4">
					<img src="@imgUrl/pc/cont2_video5.png" alt="">
				</div>
				<div class="slide-item eduf-play" data-video="//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220217/Y/5min-YYF-YJS.mp4">
					<img src="@imgUrl/pc/cont2_video6.png" alt="">
				</div>
				
			</div>
		</div>
		@if ("M".Equals(ViewBag.PlatformCd)){
			<img src="@imgUrl/@platform/cont2_title2.png" alt="" >
		}
	</div>

	<div id="event2" class="container promotion-cont3">
		<div class="wrap">
			<span class="text">@(ViewBag.eventDate)</span>
			<img src="@imgUrl/@platform/cont3_title1.png" alt="" >

			@if ("W".Equals(ViewBag.PlatformCd)){
				<div id="priceArrary" class="priceWrap"></div>
			}
			<button type="button"
				class="btn-refunds"
				data-icon="hand"
				data-style="16,3,52,slideY" 
				data-stylemo="-3,66,30,slideY" 
				data-pointer="icon_pointer_12" 
				title="타임특가" 
				onclick="alert('쿠폰받기');">
				<img src="@imgUrl/@platform/cont3_title2.png" alt="" >
			</button>
			<ul>
				<li>* 해당쿠폰은 2/21(월) 23:59까지 사용가능 합니다.</li>
