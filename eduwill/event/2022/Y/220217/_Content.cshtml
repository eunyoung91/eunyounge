	string link2 = ("W".Equals(ViewBag.PlatformCd))? "https://engin.eduwill.net/ProductAuto/index?masterSeq=MjgzNzg=" : "https://brand.eduwill.net/sugang/view.will?progress=Y&mSeq=36307"; // 쌍기사평생
	string link3 = ("W".Equals(ViewBag.PlatformCd))? "https://engin.eduwill.net/ProductAuto/index?masterSeq=MjgzNzg=" : "https://brand.eduwill.net/sugang/view.will?progress=Y&mSeq=36307"; // 쌍기사평생2년
	string link4 = ("W".Equals(ViewBag.PlatformCd))? "https://engin.eduwill.net/ProductAuto/index?masterSeq=MjgzNzg=" : "https://brand.eduwill.net/sugang/view.will?progress=Y&mSeq=36307"; // 쌍기사평생1년
