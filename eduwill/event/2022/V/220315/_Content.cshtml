<script type="text/javascript">

	var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
	var url = window.location.href;

	document.addEventListener("DOMContentLoaded", function(){
		pageMove('.page-move');
		winnerList();
		_f_initPrice();
		_f_initPointButton();
		_f_initTimeEvent();

		if( !isMobile){
			_f_initTabMenu();	
		}else{
			$('.eco4144Slide').slick({
				arrows: false,
				centerPadding: '0',
				infinite: true,
				slidesToShow: 1,
				slidesToScroll: 1,
				autoplay: true,
				autoplaySpeed: 4000,
				dots: true,
			});
		}

		$('.Slide').slick({
			centerMode: true,
			centerPadding: '0',
			infinite: true,
			slidesToScroll: 1,
			autoplay: true,
			autoplaySpeed: 5000,
			variableWidth: true,
			dots: true,
			arrows: true,
			responsive: [{
				breakpoint: 720,
				settings: {
					arrows: false,
				}
			}]
		});		
			
	})

	$(window).on('load', function(){
		// Login Check
		_f_initLoginCheck();
	});

	function _f_initTabMenu(){
		var _tabWrap = document.getElementById('tabwrap')
		var _tabButton = _tabWrap.getElementsByTagName('li')
		
		for(var i=0; i < _tabButton.length; i++ ){

			_tabButton[i].onclick = function(e){

				var _target = e.currentTarget;
				var _parent = _target.parentNode;
				var _index = [].indexOf.call(_parent.children, _target);
				var _tabContent = document.getElementsByClassName('tabContent');

				_tabWrap.querySelector('li.active').classList.remove('active')
				_tabWrap.querySelector('div.active').classList.remove('active')

				_target.classList.add('active')
				_tabContent[_index].classList.add('active')
				
			}

		}
	}

	// Login Check
	function _f_initLoginCheck(){
		if (!"@UserSession.UserID") {
			$('.eduf-play').off('click').on('click', function(e){
				e.preventDefault();
				GoLogin();
				return;
			})
			
			
		}else{
			_f_initVideoCommon();

			var _videoSlide = $('.Slide');

			document.querySelector('.Slide').addEventListener('click', function(e){
				e.preventDefault();
				_videoSlide.slick('slickPause');
			});

			document.getElementById('eduf-popup-close').addEventListener('click', function(e){
				e.preventDefault();
				_videoSlide.slick('slickPlay');
			});
		}

	}

	function _f_initTimeEvent(){
		//timer
        getTimerNew('#promotionTimer', 'March 21,2022,23:59');

		if ("@(ViewBag.platformCd)" == "M") {
			pageMove('.page-move', -100);
		} else {
			pageMove('.page-move', -88);
		}

    }
	
	$(window).scroll(function(){
		var winTop = $(window).scrollTop();

		$('.sector-timer').each(function(){
			var timeTop = $(this).offset().top;
			
			if(winTop > timeTop){
				$(this).addClass('fixed');
				$('.float-banner').addClass('fixed');
			}else{
				$(this).removeClass('fixed');
				$('.float-banner').removeClass('fixed');
			}
		});
	});
	
	function _f_initPrice(){

		var _priceWrap = document.getElementById('priceArrary');
		var _pricewArrary = [
			{name: '평생패스', subname: '8종 합격까지 평생수강', discount: 40, price1: '730,000', price2: '438,000', link: '@link1'},
			{name: '연간패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '440,000', price2: '264,000', link: '@link2'},
			{name: '6개월 단기패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '290,000', price2: '174,000', link: '@link3'},
			{name: '합격패스', subname: '전기+기계분야 한번에 취득', discount: 40, price1: '580,000', price2: '348,000', link: '@link4'},
		];

		var _priceHTML = '';
		for( i=0; _pricewArrary.length > i; i++){
			_priceHTML += '<div class="price">';
			_priceHTML += '<h3>'+_pricewArrary[i].name+'</h3>';
			// if( isMobile ){
			// 	_priceHTML += '<h4>'+_pricewArrary[i].subname+'</h4>';
			// }
			_priceHTML += '<p class="discount">';
			_priceHTML += '<span class="disc1">'+_pricewArrary[i].discount+'%</span>';
			_priceHTML += '<span class="disc2">'+_pricewArrary[i].price1+'<em>원</em></span>';
			_priceHTML += '<span class="disc3">'+_pricewArrary[i].price2+'<em>원</em></span>';
			_priceHTML += '</p>';
			_priceHTML += '<a href="'+_pricewArrary[i].link+'" target="_blank">자세히보기</a>';
			_priceHTML += '</div>';
		}
		
		_priceWrap.innerHTML = _priceHTML;
	}

	function winnerList(){
		var options = {
			jsonFileNm: "V202012_WINNER.min",
		};

		var _row;
		var _show;

		if ("@(ViewBag.platformCd)" == "M") {
			_row = 3;
			_show = 6;
		} else {
			_row = 4;
			_show = 6;
		}
		var slickOptions = {
			speed: 1000,
			slidesPerRow: _row,
			slidesToShow: _show,
		};

		eduf.UI.Winner('.winner-list', options, slickOptions);
	}
</script>