<script>

    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
	var str = 'event.eduwill.net';
	var checkUrl = url.indexOf(str);

	init();

	function init() {

		stepSlider();
		videoEvent();
		<!-- 0225 모바일/pc 처리 -->
		if (isMobile) {
			sliderM();
		} else {
			sliderW();
		}
	}

	<!-- 0222 변수추가 -->
	var _tween;

	<!-- 0225 슬라이드 PC / MO 따로 처리 -->
	function sliderW() {
		$('.sector-lecture-conts .sliderW').each(function(){
			var lectureSlider = new Swiper('.sector-lecture-conts .sliderW', {
				direction: 'vertical',
				calculateHeight: true,
				centeredSlides: true,
				slidesPerView: 'auto',
				spaceBetween: 50,
				arrow: false,
				pagination: false,
				draggable: false,
				loop: true,
				autoplay: {
					delay: 5000,
				},
				autoplayDisableOnInteraction : false,
				breakpoints: {
					721: {
						slidesPerView: 3,
						spaceBetween: 50,
						direction: 'vertical',
					}
				}
			})
		});
	}
	function sliderM() {
		$('.sector-lecture-conts .sliderM').each(function(){
			var lectureSlider = new Swiper('.sector-lecture-conts .sliderM', {
				direction: 'horizontal',
				calculateHeight: true,
				centeredSlides: true,
				slidesPerView: 1.2,
				spaceBetween: 10,
				arrow: false,
				pagination: {
					el: ".sector-lecture-conts .pagination",
					clickable: true,
				},
				draggable: false,
				loop: true,
				autoplay: {
					delay: 5000,
				},
				autoplayDisableOnInteraction : false,
				breakpoints: {
					720: {
						slidesPerView: 1.5,
						spaceBetween: 10
					},
				}
			})
		});
	}

	function stepSlider() {
		var stepSwiper = new Swiper ('.sector-steps .swiper-container', {
			<!-- 0221 변경 -->
			slidesPerView: 'auto',
			autoResize: false,
			centeredSlides: true,
			autoplay: {
				delay: 5000
			},
			loop: true,
			pagination: {
				el: ".swiper-pagination",
				type: "bullets",
				clickable: true,
			},
			breakpoints: {
				280: {
					slidesPerView: 1,
					spaceBetween: 30,
				},
				761: {
					slidesPerView: 'auto',
					spaceBetween: 20
				},
			}
		})
	} 

	$('.sector-introduce .tabs li') .on('click', function() {
		var tabCont = $(this).attr('data-tab');
		$('.sector-introduce .tabs li').removeClass('on');
		$('.sector-introduce .tabContents .content').removeClass('on');

		$(this).addClass('on');
		$("#"+tabCont).addClass('on');
	});

	function videoEvent() {
		 var obj = {
            a: '//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220314/0314_1/teacher.mp4',
            b: '//pmp.eduwill.net/eduwillpmp/eduwill/flv/20220314/0314_1/highlight.mp4',
        };

        var playerSrc = [];
        for(var o in obj){
            playerSrc.push(obj[o]);
        };

        var videoOption = {
            playerSrc: playerSrc,
            preview: true,
            playerClass: 'eduwill-video-player',
            playerPlayClass: 'eduwill-video-play'
        };

        eduf.UI.Player(videoOption);
	}

	$(window).on('scroll', function() {
		if(!isMobile) {
			if (this.scrollY > $('.sector-intro').height()) {
				$('.wing-contents').fadeIn();
			} else {
				$('.wing-contents').fadeOut();
			}
		}
	});

	$('.wing-contents .top').on('click', function() {
		$('html, body').animate({
			scrollTop: 0
		}, 500);
		return false;
	});

	$('.page-move').on('click', function(e) {
		e.preventDefault();
		$('html, body').animate({
			scrollTop: $(this.hash).offset().top
		}, 500);
		return false;
	});

	<!-- 0222 스크립트 추가 -->
	function showMoveSection(val) {
		_tween =  TweenMax.to($( "html, body" ), 0.5,{scrollTop:$("#section" + val).offset().top, ease:Power0.easeNone });
	}

	
</script>