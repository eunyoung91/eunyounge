<script type="text/javascript">
    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
    var str = 'event.eduwill.net';
    var checkUrl = url.indexOf(str);
    var userId = "@(UserSession.UserID)";

    $(function () {
        frontInit();
		@* if(isMobile == true){
		} *@
    });

    function frontInit() {
        pageMove('.page-move');
		if( !isMobile ){ 
			onEvent();
		}
		titleEvent();
		addSlide();
    }

	function titleEvent(){
        var promotionTitle = $('.sector-title');

        if( !isMobile ){
			TweenMax.fromTo( promotionTitle.find('.teacher'), 1.0, { opacity: 0, x: 0, y: 0 }, { opacity: 1, x: 0, y: 0, delay: 1.2, ease: 'elastic.out(1, 0.3)' });
			TweenMax.fromTo( promotionTitle.find('.laurel-list'), .5, { opacity: 0, scale: 0 }, { opacity: 1, scale: 1, delay: .2, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( promotionTitle.find('.title-1'), .6, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: .4, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( promotionTitle.find('.title-2'), .6, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: 0.6, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( promotionTitle.find('.title-3'), .6, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: 0.8, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( promotionTitle.find('.title-4'), .6, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: 1.0, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( promotionTitle.find('.action'), .5, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.2, ease: Back.easeOut.config(1) });
			TweenMax.fromTo( $('.fix-right'), .5, { opacity: 0, y: 100 }, { opacity: 1, y: 0, delay: .5, ease: Sine.easeOut });
        } else {
			TweenMax.fromTo( promotionTitle.find('.title-1'), .6, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: .2, ease: Back.easeOut.config(1) });
        }
    }

	function addSlide() {
		$('.info-pager').slick({
			autoplay: true,
			autoplaySpeed: 2000,
			infinite: true,
			arrows: false,
			dots: false,
			asNavFor: '.info-slider',
			focusOnSelect: true,
			slidesToShow: 3,
			slidesToScroll: 1
		});

		$('.info-slider').slick({
            autoplay: true,
            autoplaySpeed: 2000,
            fade: true,
            infinite: true,
            arrows: false,
            dots: false,
            asNavFor: '.info-pager',
            slidesToShow: 1,
            slidesToScroll: 1
        });

		if(isMobile == true){
			$('.review-list').slick({
				autoplay: true,
				autoplaySpeed: 3000,
				speed: 1000,
				infinite: true,
				arrows:false,
				dots: false,
				centerMode: true,
				variableWidth: true
			});
		}
	}

	function onEvent() {
		$(window).on('scroll', function(){
            var wt = $(window).scrollTop();
            var section = $('.sector-review');

            section.each(function(i){
                if( wt >= section.eq(i).offset().top - 600){
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        });
	}
</script>
