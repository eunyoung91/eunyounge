<script type="text/javascript">
    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
    var str = 'event.eduwill.net';
    var checkUrl = url.indexOf(str);

	_f_initSetInterval('.textArea > li', 1000);
	_f_initScrollClass('.promotion-raise', 'isActive');

	function _f_initScrollClass(el, active){
		
		var _scroll =  false;

		document.addEventListener('scroll', function() {
			var _scrollTop = document.documentElement.scrollTop;;
			var _section = document.querySelector(el);
			var _topPos = _section.offSetTop;

			console.log(_scroll, _scrollTop, _topPos);
			
			if( _scrollTop >= _section.offSetTop - 600){

				console.log(_scroll);
				if( _scroll == false ){

					//_section.addClass('isActive');
					_section.classList.add(active);
					_scroll = true;
				}
				
			}	
		});
	}
	
    function _f_initVideo(el, speed){
        
		$(document).on('ready', function(){
			var idx = 0;
			var box = $(el);
			var interval;
			
			function dostuff(){
				interval = setInterval(time, speed)
			}

			dostuff()

			function time(){

				box.removeClass('active');
				box.eq(idx).addClass('active');
				idx++;
				if(idx >= box.length) idx= 0;
			}
		})
	}

	$(document).on('ready', function(){
		onComplete();
		_f_initLinkHand();
        pageMove('.page-move');

		var SELECTOR = {
			listBanner: $('.only-list'),
		}

		SELECTOR.listBanner.slick({
			slidesToShow : 1,
			slidesToScroll : 1,
			speed: 500,
			arrows: true,
			dots: false,
			variableWidth: true,
			infinite: true,
			autoplay: false,
			centerMode: true,

			responsive: [                        
                 {
                   breakpoint: 720,
