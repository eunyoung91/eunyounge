						slidesToShow : 1,
						autoplay: true,
						arrows: false,
						dots: false,
                 	},
				}
             ]
		});
		
	})

		
	function onComplete(){
        var $promotionTitle = $('.promotion-title');
        var $light = $('.promotion-title .light');

		if(isMobile){
			TweenMax.fromTo( $promotionTitle.find('.item-1 .light'), 5, { opacity: 1, x: -100 }, { opacity: 1, x: 300, delay: 0.0,  repeat: -1, ease: Power2.eaesOut });
			TweenMax.fromTo( $promotionTitle.find('.item-2 .light'), 5, {opacity: 1, x: -100 }, { opacity: 1, x: 300, delay: 0.4,  repeat: -1, ease: Power2.eaesOut });
			TweenMax.fromTo( $promotionTitle.find('.item-3 .light'), 5, {opacity: 1, x: -100 }, { opacity: 1, x: 300, delay: 0.8,  repeat: -1, ease: Power2.eaesOut });

		}else{
			TweenMax.fromTo( $promotionTitle.find(".motion-1 .origin"), 0.7,{opacity:0, scale: 1.6}, {opacity:1, scale: 1, delay:0.3, ease:Power3.easeOut, onComplete: function(){
				TweenMax.fromTo( $promotionTitle.find(".motion-1 .origin"), 0.5, { opacity: 1 }, { opacity: 0, delay:0.9, ease: Power3.eaesOut});
			}});

			TweenMax.fromTo( $promotionTitle.find(".motion-2 .origin"), 0.7,{opacity:0, scale: 1.6}, {opacity:1, scale: 1, delay:0.6, ease:Power3.easeOut, onComplete: function(){
				TweenMax.fromTo( $promotionTitle.find(".motion-2 .origin"), 0.5, { opacity: 1 }, { opacity: 0, delay:0.9, ease: Power3.eaesOut});
			}});

			TweenMax.fromTo( $promotionTitle.find(".motion-3 .origin"), 0.7,{opacity:0, scale: 1.6}, {opacity:1, scale: 1, delay:0.6, ease:Power3.easeOut, onComplete: function(){
				TweenMax.fromTo( $promotionTitle.find(".motion-3 .origin"), 0.5, { opacity: 1 }, { opacity: 0, delay:0.9, ease: Power3.eaesOut});
			}});

			TweenMax.fromTo( $promotionTitle.find(".motion-4 .origin"), 0.7,{opacity:0, y: -100}, {opacity:1, y: 0, delay:0.9, ease:Power3.easeOut});

			TweenMax.fromTo( $promotionTitle.find(".title"), 0.7,{opacity:0}, {opacity:1, delay:0.9, ease:Power3.easeOut});

			TweenMax.fromTo( $promotionTitle.find('.motion-1 .custom'), .5, { opacity: 0}, { opacity: 1, delay: 0.9, ease: Power2.easeOut, onComplete: function(){
