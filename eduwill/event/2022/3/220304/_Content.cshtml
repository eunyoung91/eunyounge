		section.each(function(i){
			var _this = $(this);

			if( wt >= section.eq(i).offset().top - 600){
				_this.addClass('active');

				function _f_changeFix(num){
					var _fixWrap = $('#moveBanner');

					_fixWrap.find('li').removeClass('active');
