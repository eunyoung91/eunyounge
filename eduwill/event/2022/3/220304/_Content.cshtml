					_f_changeFix(3);

				}else if( _this.hasClass('promotion-cont5')){
					_f_changeFix(4);

				}else if( _this.hasClass('promotion-somun')){
					_f_changeFix(5);

				}else if( _this.hasClass('promotion-cont6')){
					_f_changeFix(0);
				}

			} else {
				_this.removeClass('active');
			}
		});
