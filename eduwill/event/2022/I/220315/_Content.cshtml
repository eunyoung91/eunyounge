		if (!"@UserSession.UserID") {
			$('.eduf-play').off('click').on('click', function(e){
				e.preventDefault();
				GoLogin();
				return;
			})
			
			
		}else{
			_f_initVideoCommon();

			var _videoSlide = $('.Slide');

			document.querySelector('.Slide').addEventListener('click', function(e){
				e.preventDefault();
				_videoSlide.slick('slickPause');
			});

			document.getElementById('eduf-popup-close').addEventListener('click', function(e){
				e.preventDefault();
				_videoSlide.slick('slickPlay');
