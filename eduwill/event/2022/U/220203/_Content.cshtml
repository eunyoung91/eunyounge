	  function titleEvent(){
        TweenMax.fromTo($('.sector-title .sale'), 1, { y: 0 }, { y: -10, repeat: -1, yoyo: true, ease: Bounce.eaesInOut });
    }

    function checkResolution(e) {
        if (isMobile || !checkUrl) {
            replaceImageLinks(e, 'pc', 'mobile');
            //console.log('mobile');
        } else {
            replaceImageLinks(e, 'mobile', 'pc');
            //console.log('pc');
        }
    }

    function replaceImageLinks(target, basic, change) {
        $(target + ' a').each(function () {
            var pcLink = $(this).data("pcLink");
            var mobileLink = $(this).data("mobileLink");
            $(this).attr("href", change == "pc" ? pcLink : mobileLink);
        });
    }

    function addSlide() {
        $('.slider-multiple').each(function () {
            if (isMobile) {
                _show = 1;
                _center = true;
            } else {
                _show = 3;
                _center = false;
            }
            $(this).slick({
                autoplay: true,
                autoplaySpeed: 3000,
                speed: 1000,
                infinite: true,
                arrows: false,
                dots: true,
                mobileFirst: true,
                centerMode: _center,
                slidesToShow: _show,
                slidesToScroll: 1
            });
        });
		$('.pop-slider').slick({
			autoplay: true,
			autoplaySpeed: 2000,
			speed: 1000,
			infinite: true,
			arrows: true,
			dots: false
		});
       
	  }

    function winnerList() {
        var options = {
            jsonFileNm: "U202000_WINNER.min",
        };

        var _row;
        var _show;
        if (isMobile && checkUrl != -1) {
            _row = 3;
            _show = 5;
        } else {
            _row = 5;
            _show = 8;
        }

        var slickOptions = {
            speed: 1000,
            slidesPerRow: _row,
            slidesToShow: _show,
        };

        eduf.UI.Winner(".winner-list", options, slickOptions);
    }

    function addTyping() {
        var typingBool = false;
        var typingIdx = 0;
        var typingTxt = "에듀윌 ";
        typingTxt = typingTxt.split("");
        if (typingBool == false) {
            typingBool = true;
            var tyInt = setInterval(typing, 500);
        }

        function typing() {
            if (typingIdx < typingTxt.length) {
                $(".typing").append(typingTxt[typingIdx]);
                typingIdx++;

                if (typingIdx > (typingTxt.length - 1)) {
                    typingIdx = 0;
                    $(".typing").empty();
                }
