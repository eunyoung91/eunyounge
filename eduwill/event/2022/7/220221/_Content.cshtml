        @* 소문내기 이벤트는 여기에 적용 부탁드립니다. *@
    </div>

    <div class="sector-banner">
        <div data-eduwill-eco-content="523"></div>
    </div>
</div>

<script type="text/javascript">
    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
    var url = window.location.href;
    var str = 'event.eduwill.net';
    var checkUrl = url.indexOf(str);

    $(function(){
        frontInit();
    });

    function frontInit(){
        pageMove('.page-move');
        slideEvent();
        loadEvent();
    }

    function loadEvent(){
        $(window).on('load', function(){
            var _top = (isMobile) ? $('.sector-title').offset().top - 50 : $('.sector-title').offset().top;

            $('html, body').animate({
                scrollTop: _top
            }, 500);

            setTimeout(function(){
                titleEvent();
            }, 550);
        });
    }

    function titleEvent(){
        var promotionTitle = $('.sector-title');

        TweenMax.fromTo( promotionTitle.find('.teacher'), 1.0, { opacity: 0, x: -100 }, { opacity: 1, x: 0, delay: .2, ease: Power2.easeOut, onComplete: function(){
            TweenMax.fromTo( promotionTitle.find('.title-1'), .8, { opacity: 0, x: 100, }, { opacity: 1, x: 0, delay: .1, ease: Power2.easeOut });

            TweenMax.fromTo( promotionTitle.find('.title-2'), .8, { opacity: 0, x: -100, }, { opacity: 1, x: 0, delay: .3, ease: Power2.easeOut, onComplete: function(){
                TweenMax.fromTo( promotionTitle.find('.laurel'), .5, { opacity: 0, y: -50, }, { opacity: 1, y: 0, delay: .1, ease: Power2.easeOut });
                TweenMax.fromTo( promotionTitle.find('.title-3'), .6, { opacity: 0, scale: 0 }, { opacity: 1, scale: 1, delay: .3, ease: Back.easeOut.config(1) });

                TweenMax.fromTo( promotionTitle.find('.title-4'), .6, { opacity: 0, scale: 0 }, { opacity: 1, scale: 1, delay: .5, ease: Back.easeOut.config(1), onComplete: function(){
                    TweenMax.fromTo( promotionTitle.find('.action-apply'), .5, { opacity: 0, y: 20, }, { opacity: 1, y: 0, delay: .1, ease: Power2.easeOut });
                    TweenMax.fromTo( promotionTitle.find('.action-home'), .5, { opacity: 0 }, { opacity: 1, delay: .3, ease: Power2.easeOut });
                    TweenMax.fromTo( promotionTitle.find('.period'), .5, { opacity: 0, y: 50, }, { opacity: 1, y: 0, delay: .4, ease: Power2.easeOut });
                    TweenMax.fromTo( promotionTitle.find('.base'), .5, { opacity: 0, x: 50, }, { opacity: 1, x: 0, delay: .5, ease: Power2.easeOut });
                    if( promotionTitle.find('.flag').length > 0 ){
                        TweenMax.fromTo( promotionTitle.find('.flag'), .5, { opacity: 0, scale: 1.1, }, { opacity: 1, scale: 1, delay: .6, ease: Back.easeOut.config(1) });
                    }

                    TweenMax.fromTo( $('.fix-right'), .5, { opacity: 0, y: 50 }, { opacity: 1, y: 0, delay: 1.0, ease: Sine.easeOut });
                }});
            }});
        }});
    }

    function slideEvent(){
        $('.review-list').slick({
            autoplay: true,
            autoplaySpeed: 3000,
            speed: 1000,
            infinite: true,
            variableWidth: true,
            centerMode: true,
            arrows: false,
            dots: true,
            pauseOnFocus: true,
            pauseOnHover: true
        });
    }
</script>
